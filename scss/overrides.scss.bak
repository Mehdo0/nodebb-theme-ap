// ============================================================================
// Typography - Dual-Font System (AP x Harmony)
// ============================================================================

// Google Fonts: Inter for UI, Montserrat for headings, Playfair Display for logo
$font-family-logo: "Playfair Display", Georgia, "Times New Roman", serif !default;   // Brand / logo
$font-family-heading: "Montserrat", "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif !default; // Headings
$font-family-body: "Inter", "Roboto", "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif !default; // UI / body

$font-family-sans-serif: $font-family-body !default;
$font-family-secondary: $font-family-heading !default;

// Font Weights
$font-weight-light: 300 !default;      // Large category titles
$font-weight-normal: 400 !default;     // Body text
$font-weight-semibold: 600 !default;   // Thread titles
$font-weight-bold: 700 !default;       // Emphasis

// Typography Scale
$font-size-base: 1rem !default;
$line-height-base: 1.5 !default;  // Generous line spacing for premium feel
$small-font-size: 0.875rem !default;

$h1-font-size: 2.5rem !default;
$h2-font-size: 2rem !default;
$h3-font-size: 1.75rem !default;
$h4-font-size: 1.5rem !default;
$h5-font-size: 1.25rem !default;
$h6-font-size: 1rem !default;

// ============================================================================
// Luxury UI Elements
// ============================================================================

// Layout - Spacious & Minimalist
$spacer: 1.5rem !default;
$border-radius: 0 !default;  // Sharp, precise corners (no rounded edges)
$border-width: 1px !default;
$border-color: $gray-200 !default;

// Buttons - Flat design, sharp corners
$btn-border-radius: 0 !default;
$btn-font-weight: $font-weight-semibold !default;
$btn-padding-x: 2rem !default;
$btn-padding-y: 0.75rem !default;

// Cards & Content Areas
$card-border-radius: 0 !default;
$card-border-width: 1px !default;
$card-border-color: $gray-200 !default;
$card-bg: $white !default;
$card-spacer-x: 2rem !default;
$card-spacer-y: 1.5rem !default;

// Inputs
$input-border-radius: 0 !default;
$input-border-color: $gray-200 !default;
$input-focus-border-color: $ap-pink-gold !default;
$input-focus-box-shadow: 0 0 0 0.2rem rgba($ap-pink-gold, 0.1) !default;

// Links
$link-decoration: none !default;
$link-hover-decoration: underline !default;

// Breadcrumbs
$breadcrumb-divider: quote("â†’") !default;
$breadcrumb-divider-color: $ap-pink-gold !default;
$breadcrumb-active-color: $body-color !default;
$breadcrumb-item-padding-x: 12px !default;

// ============================================================================
// Component Settings
// ============================================================================

$enable-caret: false !default;
$enable-smooth-scroll: false !default;
$enable-shadows: false !default;  // Minimal shadows for flat design

// Placeholders
.form-control::placeholder, .bootstrap-tagsinput::placeholder {
	color: $gray-400 !important;
}

