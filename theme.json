{
    "id": "nodebb-theme-ap",
    "name": "AP Theme",
    "description": "Custom Audemars Piguet theme with bottom navigation",
    "version": "1.0.0",
    "baseTheme": "nodebb-theme-harmony",
    "screenshot": "screenshot.png",
    "url": "https://github.com/Mehdo0/nodebb-theme-ap",
    "hooks": [
        "static:app.load",
        "filter:widgets.getAreas",
        "filter:admin.header.build"
    ],
    "scripts": [
        "lib/modules.js"
    ],
    "acpScripts": [
        "lib/modules.js"
    ],
    "staticDirs": {
        "images": "public/images",
        "fonts": "public/fonts"
    },
    "less": [
        "assets/overrides.less"
    ],
    "templates": "templates"
}